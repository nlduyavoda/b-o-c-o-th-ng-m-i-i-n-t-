@model IEnumerable<DoAn1.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    <head>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                crossorigin="anonymous">
        </script>
        <script src="~/Content/jquery.tableToExcel.js"></script>

    </head>




<div class="card">
    <div class="card__header row">
        <div class="col-md-10 card__header-left">
            <h3>Table Order</h3>
            <p style="font-size:1.2rem">Last campaign</p>
        </div>
        <div class="col-md-2 card__header-right">
            <a href="../Orders/Create" class="btn btn-primary">Create Order</a>
            <a style="margin:5px 0;color:white;" onclick="$('table').tblToExcel();" class="btn btn-primary">Export To Excel</a>
        </div>
    </div>
    <div class="card__body">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col"> @Html.DisplayNameFor(model => model.IDOrder)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.OrderDate)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Descriptions)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Customer.Email_Cus)</th>
                    <th scope="col">###</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDOrder)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descriptions)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Customer.Email_Cus)
                        </td>
                        
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.IDOrder }, new { Class = "btn btn-danger" })
                            @Html.ActionLink("Details", "Details", new { id = item.IDOrder }, new { Class = "btn btn-warning" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.IDOrder }, new { Class = "btn btn-success" })
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>

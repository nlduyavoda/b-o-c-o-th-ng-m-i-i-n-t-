        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="~/Scripts/chart/exporting.js"></script>
        <script src="~/Scripts/chart/highcharts.js"></script>

    </head>
<div class="row">

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div style="height: 95px !important;" class="card border-left-primary shadow h-100 py-2">
            <div style="display:flex" class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div style="font-size:12px;" class="text-xs font-weight-bold text-primary text-uppercase mb-1">Orders completed</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @Model.Count()
                        </div>
                    </div>
                    <div class="col-auto">
                        <i style="font-size:28px" class="fas fa-calendar fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div style="height: 95px !important;" class="card border-left-success shadow h-100 py-2">
            <div style="display:flex" class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div style="font-size:12px" class="text-xs font-weight-bold text-success text-uppercase mb-1">Earnings</div>
                        <div style="font-size:22px" class="h5 mb-0 font-weight-bold text-gray-800">@Model.Sum(m => m.Total)</div>
                    </div>
                    <div class="col-auto">
                        <i style="font-size:28px" class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div style="height: 95px !important;" class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div style="font-size:12px" class="text-xs font-weight-bold text-info text-uppercase mb-1">Tasks</div>
                        <div class="row no-gutters align-items-center">
                            <div class="col-auto">
                                <div style="font-size:12px" class="h5 mb-0 mr-3 font-weight-bold text-gray-800">50%</div>
                            </div>
                            <div class="col">
                                <div class="progress progress-sm mr-2">
                                    <div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i style="font-size:28px" class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Requests Card Example -->
    <div style="height: 95px !important;" class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div style="display:flex" class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div style="font-size:12px" class="text-xs font-weight-bold text-warning text-uppercase mb-1">Pending Requests</div>
                        <div style="font-size:22px" class="h5 mb-0 font-weight-bold text-gray-800">18</div>
                    </div>
                    <div class="col-auto">
                        <i style="font-size:28px" class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

